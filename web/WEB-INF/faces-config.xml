    <navigation-rule>
        <from-view-id>/homepage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>
                registration_completion
            </from-outcome>
            <to-view-id>
                /complete_registration.xhtml
            </to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                successful_login
            </from-outcome>
            <to-view-id>
                /currencies.xhtml
            </to-view-id>
            <redirect/>
        </navigation-case>    
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/complete_registration.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>
                successful_login
            </from-outcome>
            <to-view-id>
                /currencies.xhtml
            </to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/currencies.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>
                logout
            </from-outcome>
            <to-view-id>
                /logout_page.xhtml
            </to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                back_to_homepage
            </from-outcome>
            <to-view-id>
                /homepage.xhtml
            </to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                user_profile
            </from-outcome>
            <to-view-id>
                /user_profile.xhtml
            </to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>
                alerts
            </from-outcome>
            <to-view-id>
                /alerts.xhtml
            </to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>
                error_page
            </from-outcome>
            <to-view-id>
                /error_page.xhtml
            </to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <description>This bean represents a logged user.</description>
        <managed-bean-name>accountBean</managed-bean-name>
        <managed-bean-class>beans.AccountBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
</faces-config>
